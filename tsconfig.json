{
  "compilerOptions": {
    "composite": true,
    "declaration": true,
    "declarationMap": false,
    "lib": ["DOM", "ES2020"],
    "module": "ES2020",
    "moduleResolution": "node",
    "newLine": "lf",
    "noEmitOnError": true,
    "noImplicitAny": false,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "sourceMap": false,
    "strict": true,
    "strictNullChecks": true,
    "allowSyntheticDefaultImports": true,
    "target": "ES2018",
    "jsx": "preserve",
    "rootDir": "./src",
    "outDir": "./lib",
    "paths": {
      "@/*": ["./src/client/*"]
    }
  },
  "include": ["./src"]
}
